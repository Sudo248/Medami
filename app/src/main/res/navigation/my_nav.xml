<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/signUp">

    <fragment
        android:id="@+id/signIn"
        android:name="com.sudo.medami.activities.main.fragments.sign_in.SignIn"
        android:label="SignIn" >
        <action
            android:id="@+id/action_signIn_to_confirmFragment"
            app:destination="@id/confirmFragment" />
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.sudo.medami.activities.main.fragments.sign_up.SignUp"
        android:label="SignUp" >
        <action
            android:id="@+id/action_signUp_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.sudo.medami.activities.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/confirmFragment"
        android:name="com.sudo.medami.activities.main.fragments.confrim.ConfirmFragment"
        android:label="fragment_confirm"
        tools:layout="@layout/fragment_confirm" />
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.sudo.medami.activities.main.fragments.create_account.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createAccountFragment_to_confirmFragment"
            app:destination="@id/confirmFragment" />
    </fragment>
</navigation>